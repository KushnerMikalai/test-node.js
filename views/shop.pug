extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    .container
      if prods.length > 0
        .row
          img(src="", alt="")
          each product in prods
            .col.col-3.mb-3
              article.card.product-item
                header.card__header
                  .product-item__title #{product.title}
                .card__image
                  img(src="https://images.unsplash.com/photo-1558590987-5331428c4b17?ixlib=rb-1.2.1&auto=format&fit=crop&w=585&q=80", alt="")
      else
        h2 No product
