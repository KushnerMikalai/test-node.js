<body>
<%- include('../includes/navigation.ejs') %>
<main>
  <div class="product">
    <h1><%= product.title %></h1>
    <hr>
    <div>
      <img style="max-width: 200px" src="<%= product.imageUrl %>" alt="<%= product.title %>">
    </div>
    <h2><%= product.price %></h2>
    <p><%= product.description %></p>
    <% if (isAuthenticated) { %>
      <%- include('../includes/add-to-cart.ejs', {product: product}) %>
    <% } %>
  </div>
</main>
<%- include('../includes/end.ejs') %>
